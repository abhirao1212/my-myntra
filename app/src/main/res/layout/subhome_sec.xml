<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rectop_subhome_kid"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_card1"
            android:layout_below="@+id/rectop_subhome_kid"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/slider1_subhome_kid"
                android:layout_width="match_parent"
                android:layout_height="190dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_card2"
            android:layout_below="@+id/sub_card1"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imggif1_subhome_sec"
                    android:background="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_card3"
            android:layout_below="@+id/sub_card2"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imggif2_subhome_sec"
                    android:visibility="visible"
                    android:background="@drawable/placeholder"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recmid_subhome_kid"
            android:layout_below="@id/sub_card3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/sub_card4"
             android:layout_below="@+id/recmid_subhome_kid"
             android:layout_marginTop="10dp"
             app:cardCornerRadius="0dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <pl.droidsonroids.gif.GifImageView
                 android:id="@+id/ad3_kid"
                 android:src="@drawable/placeholder"
                 android:scaleType="centerCrop"
                 android:layout_width="match_parent"
                 android:layout_height="200dp"/>

         </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recmid2_subhome_kid"
            android:layout_below="@id/sub_card4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_subhome"
            android:layout_margin="15dp"
            android:text="View More Products"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:backgroundTint="#151B27"
            android:layout_below="@+id/recmid2_subhome_kid"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>

        <TextView
            android:id="@+id/line"
            android:layout_marginTop="-20dp"
            android:text="━━━━━━━"
            android:gravity="center"
            android:layout_below="@+id/btn_subhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/quote_subhome"
            android:gravity="center"
            android:textSize="14dp"
            android:text="'In order to be irreplaceable one must always be different.'"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/author_subhome"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/quote_subhome"
            android:gravity="center"
            android:textColor="#8C8484"
            android:textSize="14dp"
            android:text="Coco Chanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>