<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Theme.MyntRa"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:backgroundTint="@color/white"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/icon"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:background="@drawable/menuxyq"
                android:layout_gravity="left"
                android:layout_marginEnd="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/logo"
                android:background="@drawable/myntlogo"
                android:layout_gravity="center_vertical|start"
                android:layout_width="70dp"
                android:layout_height="40dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bag_main"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/cartxy"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/notify_main"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/bellxy"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/search_main"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/search"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/container_demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>